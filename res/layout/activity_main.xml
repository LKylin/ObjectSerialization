<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MainActivity" >

    <Button 
        android:id="@+id/act_main_btn_ser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickSer"
        android:text="Serializable跳转"/>
    
    <Button 
        android:id="@+id/act_main_btn_ext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickExt"
        android:text="Externalizable跳转"/>
    
    <Button 
        android:id="@+id/act_main_btn_par"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickPar"
        android:text="Parcelable跳转"/>
    

</LinearLayout>
